= simple_form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br
      = f.text_area :title
  .field
    = f.label :avatar
    %br
      = f.file_field :avatar
  .field
    = f.label :content
    %br
      = f.text_area :content
  -# .field
  -#   = f.label :latitude
  -#   %br
  -#     = f.text_field :latitude
  -# .field
  -#   = f.label :longitude
  -#   %br
  -#     = f.text_field :longitude
  .field
    = f.label :address
    %br
      = f.text_field :address
  .actions
    = f.submit
= image_tag @post.avatar.url(:small)
